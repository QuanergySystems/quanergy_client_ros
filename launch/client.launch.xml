<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="host" />
  <arg name="ns" default="quanergy" />
  <arg name="topic" default="points" />
  <arg name="frame" default="$(var ns)" />

  <!-- driver -->
  <node name="client_node" 
        pkg="quanergy_client_ros" 
        exec="client_node" 
        namespace="$(var ns)"
        args="--host $(var host) --settings $(find-pkg-prefix quanergy_client_ros)/settings/client.xml --frame $(var frame) --topic $(var topic)"
        output="screen"/>
</launch>
